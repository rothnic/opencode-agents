{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://opencode.ai/validation-rules.schema.json",
  "title": "OpenCode Validation Rules",
  "description": "Validation rules for OpenCode project quality gates",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "description": "Schema version"
    },
    "lastUpdated": {
      "type": "string",
      "description": "Last update date (YYYY-MM-DD format)"
    },
    "rules": {
      "type": "object",
      "description": "Validation rules organized by category",
      "properties": {
        "outdatedReferences": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "severity": { "type": "string", "enum": ["info", "warning", "error"] },
            "patterns": {
              "type": "object",
              "properties": {
                "dependencies": {
                  "type": "object",
                  "additionalProperties": {
                    "type": "object",
                    "properties": {
                      "replacement": { "type": "string" },
                      "message": { "type": "string" },
                      "searchIn": {
                        "type": "array",
                        "items": { "type": "string" }
                      },
                      "exceptions": {
                        "type": "array",
                        "items": { "type": "string" }
                      }
                    },
                    "required": ["replacement", "message", "searchIn"]
                  }
                },
                "models": {
                  "type": "object",
                  "additionalProperties": {
                    "type": "object",
                    "properties": {
                      "replacement": { "type": "string" },
                      "message": { "type": "string" },
                      "searchIn": {
                        "type": "array",
                        "items": { "type": "string" }
                      },
                      "exceptions": {
                        "type": "array",
                        "items": { "type": "string" }
                      }
                    },
                    "required": ["replacement", "message", "searchIn"]
                  }
                }
              }
            }
          }
        },
        "backupFiles": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "severity": { "type": "string", "enum": ["info", "warning", "error"] },
            "patterns": {
              "type": "array",
              "items": { "type": "string" }
            },
            "message": { "type": "string" },
            "autoFix": { "type": "string", "enum": ["delete", "move", "ignore"] }
          }
        },
        "statusFreshness": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "severity": { "type": "string", "enum": ["info", "warning", "error"] },
            "file": { "type": "string" },
            "maxAgeHours": { "type": "number" },
            "requiredSections": {
              "type": "array",
              "items": { "type": "string" }
            },
            "message": { "type": "string" }
          }
        },
        "uncommittedChanges": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "severity": { "type": "string", "enum": ["info", "warning", "error"] },
            "maxFiles": { "type": "number" },
            "message": { "type": "string" },
            "excludePatterns": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        },
        "requiredFiles": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "severity": { "type": "string", "enum": ["info", "warning", "error"] },
            "files": {
              "type": "object",
              "additionalProperties": {
                "type": "object",
                "properties": {
                  "purpose": { "type": "string" },
                  "template": { "type": "string" },
                  "location": { "type": "string" }
                }
              }
            }
          }
        },
        "modelDefaults": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "severity": { "type": "string", "enum": ["info", "warning", "error"] },
            "recommendations": {
              "type": "object",
              "properties": {
                "default": { "type": "string" },
                "reasoning": { "type": "string" },
                "coding": { "type": "string" },
                "review": { "type": "string" },
                "documentation": { "type": "string" }
              }
            },
            "message": { "type": "string" }
          }
        },
        "projectMaturity": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "levels": {
              "type": "object",
              "properties": {
                "bootstrap": {
                  "type": "object",
                  "properties": {
                    "maxCommits": { "type": "number" },
                    "description": { "type": "string" },
                    "allowances": {
                      "type": "array",
                      "items": { "type": "string" }
                    }
                  }
                },
                "development": {
                  "type": "object",
                  "properties": {
                    "maxCommits": { "type": "number" },
                    "description": { "type": "string" },
                    "enforcements": {
                      "type": "array",
                      "items": { "type": "string" }
                    }
                  }
                },
                "production": {
                  "type": "object",
                  "properties": {
                    "description": { "type": "string" },
                    "enforcements": {
                      "type": "array",
                      "items": { "type": "string" }
                    }
                  }
                }
              }
            },
            "message": { "type": "string" }
          }
        },
        "versionSeverity": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "description": { "type": "string" },
            "milestones": {
              "type": "object",
              "additionalProperties": {
                "type": "object",
                "properties": {
                  "description": { "type": "string" },
                  "severity": { "type": "string", "enum": ["info", "warning", "error"] },
                  "rules": {
                    "type": "array",
                    "items": { "type": "string" }
                  },
                  "escalations": {
                    "type": "object",
                    "additionalProperties": {
                      "type": "string",
                      "enum": ["info", "warning", "error"]
                    }
                  }
                }
              }
            },
            "message": { "type": "string" }
          }
        }
      }
    },
    "excludePaths": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Paths to exclude from validation"
    }
  },
  "required": ["version", "rules"]
}
